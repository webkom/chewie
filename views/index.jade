extends layout

block content
    .projects.row
        each project, name in projects
            .row.well.project(data-name="#{name}", data-hash='#123456', data-hash-link='www.github.com')
                .col-xs-4
                    span.mega-octicon.octicon-repo
                .col-xs-8
                    h2 #{name}
                    p Last deployment: 18.06.2013

    #output
        h3
            | Current version:
            a#github-version-link(href='#')
                span.octicon.octicon-mark-github
                    span#github-version
        h3
            button.btn.btn-lg.btn-success#deploy-button
                i.fa.fa-spinner.fa-spin
                span

        pre.row
            code
